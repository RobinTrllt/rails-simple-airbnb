  <div class="banner">
  </div>
<div class="container">

  <div class="flat-name">
    <h1><%= @flat.name %></h1>
    <h3><%= @flat.address %></h3>
  </div>
  <div class="flat-details">
    <h3><i class="fas fa-euro-sign" class="euro"></i>&nbsp<%= @flat.price_per_night %>/night</h3><br>
    <h3><i class="fas fa-user-friends" class="people"></i>&nbsp<%= @flat.number_of_guests %></h3>
  </div>
  <div class="flat-description">
    <h3>A bit more about this flat...</h3>
    <p><%= @flat.description %></p>
  </div>

  <div class="buttons">
    <%= link_to "Edit this flat", edit_flat_path, class:'edit' %>
    <%= link_to "Delete #{@flat.name}",
                flat_path(@flat),
                method: :delete,
                data: { confirm: "Are you sure?" }, class:'remove'%>
    <%= link_to "Back to flats", flats_path, class:'back'%>
  </div>
</div>
